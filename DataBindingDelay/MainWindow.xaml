<Window x:Class="DataBindingDelay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Text="{Binding Text,Mode=OneWayToSource,Delay=500,UpdateSourceTrigger=PropertyChanged}"></TextBox>
    </Grid>
</Window>
