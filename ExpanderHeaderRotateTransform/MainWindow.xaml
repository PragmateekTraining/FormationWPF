<Window x:Class="ExpanderHeaderRotateTransform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Expander ExpandDirection="Right" BorderThickness="1" BorderBrush="Red">
            <Expander.Header>
                <TextBlock Text="Some Really Long Header">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="-90"></RotateTransform>
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Expander.Header>
            <Rectangle Fill="AliceBlue" Width="300" Height="300">                
            </Rectangle>
        </Expander>
    </Grid>
</Window>
