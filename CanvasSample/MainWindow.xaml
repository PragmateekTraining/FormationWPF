<Window x:Class="CanvasSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" FontWeight="Bold">
    <Grid>
        <Canvas x:Name="canvas" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" Background="Transparent">
            <TextBlock Canvas.Left="100" Canvas.Top="100" Foreground="Red">First</TextBlock>
            <TextBlock Canvas.Left="200" Canvas.Top="200" Foreground="Green">Second</TextBlock>
            <TextBlock Canvas.Left="400" Canvas.Top="0" Foreground="Blue">Third</TextBlock>
        </Canvas>
    </Grid>
</Window>
