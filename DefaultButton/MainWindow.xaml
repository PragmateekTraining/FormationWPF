                        <DataTrigger Binding="{Binding IsDefaulted,ElementName=click}" Value="True">
                            <Setter Property="TextDecorations" Value="Underline" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>-->
    </StackPanel>
</Window>
