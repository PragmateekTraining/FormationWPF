<Window x:Class="AsyncEventHandlerSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="MainWindow"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <StackPanel>
        <ScrollViewer x:Name="scrollViewer" Width="300" Height="200">
            <TextBlock x:Name="dataOutput"></TextBlock>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="loadDataButton" Click="loadDataButton_Click">Load Data</Button>
            <Button x:Name="cancelButton" IsEnabled="False" Click="cancelButton_Click">Cancel</Button>
            <mui:ModernProgressRing x:Name="progressMarker"></mui:ModernProgressRing>
        </StackPanel>
    </StackPanel>
</Window>
