<Window x:Class="Alignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="Red" />
            <Setter Property="Background" Value="LemonChiffon" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" HorizontalAlignment="Left">
            <TextBlock>Left</TextBlock>
        </Border>
        <Border Grid.Row="1" HorizontalAlignment="Right">
            <TextBlock>Right</TextBlock>
        </Border>
        <Border Grid.Row="2" HorizontalAlignment="Center">
            <TextBlock>Center</TextBlock>
        </Border>
        <Border Grid.Row="3" HorizontalAlignment="Stretch">
            <TextBlock>Stretch</TextBlock>
        </Border>
    </Grid>
</Window>
